{
    "manifest_version": 3,
    "name": "AI Content Detector (Demo)",
    "version": "0.1",
    "description": "Highlights paragraphs that look AI-generated.",
    "permissions": ["scripting", "activeTab"],
    "background": {
    "service_worker": "background.js"
    },
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
    ],
    "action": {
    "default_popup": "popup.html"
    }
}