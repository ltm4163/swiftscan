{
  "manifest_version": 3,
  "name": "SwiftScan AI Detector",
  "version": "0.1",
  "description": "Highlights paragraphs that look AI-generated.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["http://127.0.0.1:5000/*"]
}